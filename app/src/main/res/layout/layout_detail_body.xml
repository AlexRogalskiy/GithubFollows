<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background"
  android:orientation="vertical"
  android:padding="8dp">

  <com.skydoves.androidveil.VeilRecyclerFrameView
    android:id="@+id/detail_body_recyclerViewFrame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:veilFrame_layout="@layout/item_detail_info"
    app:veilFrame_veiled="true" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="10dp"
    android:text="Contributions"
    android:textColor="@color/colorPrimary"
    android:textSize="16sp"
    android:textStyle="bold" />

  <com.skydoves.androidveil.VeilLayout
    android:id="@+id/detail_body_veilLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:veilLayout_shimmerEnable="true"
    app:veilLayout_veiled="true">

    <View
      android:id="@+id/detail_body_preview"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_margin="8dp"
      android:orientation="vertical" />

    <ImageView
      android:id="@+id/detail_body_contributes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:scaleType="fitXY" />
  </com.skydoves.androidveil.VeilLayout>
</LinearLayout>
